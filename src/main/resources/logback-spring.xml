<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <jmxConfigurator />
    <springProperty name="LOG_SUB_FOLDER" scope="context" source="app.request.mapping.component" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%white%d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>